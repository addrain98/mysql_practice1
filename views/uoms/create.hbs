{{#extends "base"}}

{{#block "content"}}

<form action="/uoms/create" method="POST">
    <div>
        <label for="uom">UoM:</label>
        <input type="text" id="uom" name="uom" class="form-control" required>
    </div>
    <div>
        <label for="description">Description:</label>
        <input type="text" id="description" name="description" class="form-control" required>
    </div>
    <div>
        <label for="product_id">Product:</label>
        <select id="product_id" name="products" class="form-control" multiple>
            {{#each products}}
                <option value="{{this.product_id}}">
                    {{this.name}}
                </option>
            {{/each}}
        </select>
    </div>
    <button type="submit" class="mt-3 btn btn-primary">Create UoM</button>
</form>

{{/block}}
{{/extends}}