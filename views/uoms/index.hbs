{{#extends 'base'}}

{{#block "content"}}
<h2>UoM List</h2>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>UoM</th>
            <th>Description</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        {{#each uoms}}
        <tr>
            <td>{{this.uom_id}}</td>
            <td>{{this.uom}}</td>
            <td>{{this.description}}</td>
            <td>
                <a href="/uoms/{{this.uom_id}}/delete" class="btn btn-danger btn-sm">Delete</a>
            </td>
        </tr>
        {{/each}}
        <tr>
            <a href="/uoms/create" class="btn btn-primary btn-sm">Add UoM</a>
        </tr>
    </tbody>
</table>

{{/block}}

{{/extends}}